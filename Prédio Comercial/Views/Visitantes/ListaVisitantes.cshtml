                                            <path d="M4 2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm3.5-.5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5zM4 5.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zM7.5 5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5zm2.5.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zM4.5 8a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5zm2.5.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm3.5-.5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5z" />
                                            <path d="M2 1a1 1 0 0 1 1-1h10a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1zm11 0H3v14h3v-2.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 .5.5V15h3z" />
                                        </svg>
                                    </a>
                                    <a data-id="@x.Id" class="btn btn-danger btn-deletar">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293z" />
                                        </svg>
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-controller="Visitantes" asp-action="Index" class="btn btn-light">Voltar</a>

            </div>
            </div>

        </div>

    </div>
    @section Box1{
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-lg-5">
                <form method="get" asp-action="ListaVisitantes" asp-controller="Visitantes" class="mb-3">
                        <div class="mb-3">
                            <label for="documento" class="form-label">Documento RG/CPF:</label>
                            <input type="text" name="documento" class="form-control" id="documento" required />
                        </div>
                        <button type="submit" class="btn btn-primary">Filtrar</button>
                    </form>
                </div>
                <div class="col-4 col-12">
                    <div class="table-responsive">
                            <table class="table table-dark">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(models => models.Name)</th>
                                    </tr>
                                </thead>
                                <tbody>
                            @foreach(var y in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(models => y.Name)</td>
                                </tr>
                            }
                        </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }


<div class="col-md-3">

</div>
<!--Aqui é o MODAL que vai abrir o formulário para Edição-->

<div class="modal fade" id="modalEdicao" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Deseja Editar Visitante?</h1>
            <div class="modal-body" id="conteudoModalEdicao">

            </div>
        </div>
    </div>
</div> 
<!-- Aqui é onde abre o modal para confirmação de Deletar-->

<div class="modal fade" id="modalDelete" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Deseja Deletar Visitante?</h1>
            <div class="modal-body" id="conteudoModalDelete">

            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function () {
        $('.btn-editar').click(function () {
            const id = $(this).data('id');

            $.ajax({
                type: "GET",
                url: "/Visitantes/Editar/" + id,
                success: function (html) {
                    $('#conteudoModalEdicao').html(html);
                    $('#modalEdicao').modal('show');
                },
                error: function () {
                    alert("Erro ao carregar formulário.");
                }
            });
        });

        $(document).on('submit', '#formEditarVisitante', function (e) {
            e.preventDefault();
            $.ajax({
                type: "POST",
                url: "/Visitantes/Editar/",
                data: $("#formEditarVisitante").serialize(),
                success: function (response) {
                    $('#modalEdicao').modal('hide');
                    location.reload();
                },
                error: function (xhr) {
                    alert("Erro ao salvar dados:" + xhr.responseText);
                }
            });
        });

    // Aqui vai o outro script para abrir o formulário para confirmar o Delete //

    
        $('.btn-deletar').click(function () {
            const id = $(this).data('id');

            $.ajax({
                type:"GET",
                url:"/Visitantes/Deletar/"+id,
                success: function (html) {
                    $('#conteudoModalDelete').html(html);
                    $('#modalDelete').modal('show');
                },
                error: function() {
                    alert("Erro ao carregar Visitante");
                }
            });
        });

        $(document).on('submit', '#formDeletarVisitante', function (e) {
            e.preventDefault();
            $.ajax({
                type:"POST",
                url: "/Visitantes/DeletarVisitante/",
                data: $("#formDeletarVisitante").serialize(),
                success: function (response) {
                    $('#modalDelete').modal('hide');
                    location.reload();
                },
                error: function(xhr) {
                    alert("Erro ao deletar o Visitante :" + xhr.responseText);
                }
            });
        });
    });
</script>

 