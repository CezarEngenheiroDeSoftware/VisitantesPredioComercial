@model IEnumerable<Prédio_Comercial.Models.Visitantes>;


    <style>

        </style>
@if (ViewBag.Mensagem != null)
{
    <div class="container">
        <div class="row">
            <div class="MensagenWarning alert alert-warning" role="alert">
                <button style="display=block;" class="_BotaoMensagemFechar">X</button>
                @ViewBag.Mensagem
            </div>
        </div>
    </div>
}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 col-12">
                <div class="table-responsive tabletable-responsive-lg">
                <h2 class="card-subtitle">Lista De Visitantes</h2>
                <a asp-controller="Visitantes" asp-action="ListaVisitantesAtivo" class="btn btn-info">Visitantes no Prédio</a>
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model=>model.Name)</th>
                            <th>@Html.DisplayNameFor(model=>model.Empresa)</th>
                            <th>@Html.DisplayNameFor(model=>model.Dataentrada)</th>
                            <th>@Html.DisplayNameFor(model=>model.DataSaida)</th>
                            <th>@Html.DisplayNameFor(model=>model.VisitandoQuem)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td id="Nome">@Html.DisplayFor(modelitem=> x.Name)</td>


                                <td>@Html.DisplayFor(modelitem=> x.Empresa)</td>


                                <td>@Html.DisplayFor(modelitem=> x.Dataentrada)</td>


                                <td>@Html.DisplayFor(modelitem=> x.DataSaida)</td>


                                <td>@Html.DisplayFor(modelitem=> x.VisitandoQuem)</td>
                                <td>
                                    <a data-id="@x.Id" class="eventToolEditar btnCustonEdit btn-editar">
                                        
                                    </a>
                                    <p class="tooltipCustomEdit">Editar</p>
                                    <a data-id="@x.Id" class="eventTool btnCustomDelet btn-deletar">
                                        x
                                    </a>
                                    <p class="tooltipCustom">Deletar</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-controller="Visitantes" asp-action="Index" class="btn btn-light">Voltar</a>

            </div>
            </div>

        </div>

    </div>
    @section Box1{
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-lg-5">
                <form method="get" asp-action="ListaVisitantes" asp-controller="Visitantes" class="mb-3">
                        <div class="mb-3">
                            <label for="documento" class="form-label">Documento RG/CPF:</label>
                            <input type="text" name="documento" class="form-control" id="documento" required />
                        </div>
                        <button type="submit" class="btn btn-primary">Filtrar</button>
                    </form>
                </div>
                <div class="col-12 col-lg-6">
                <form method="get" asp-action="ListaVisitantes" asp-controller="Visitantes" class="mb-3">
                        <div class="mb-3">
                        <label for="Dataentrada" class="form-label">Data da Entrada</label>
                        <input for="Dataentrada" name="dateTime" type="datetime-local" class="form-control" />
                        </div>
                    <button type="submit" class="btn btn-primary">Filtrar</button>
                    </form>
                    </div>
                <div class="col-4 col-12">
                    <div class="table-responsive">
                            <table class="table table-dark">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(models => models.Name)</th>
                                    </tr>
                                </thead>
                                <tbody>
                            @foreach(var y in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(models => y.Name)</td>
                                </tr>
                            }
                        </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }


<div class="col-md-3">

</div>
<!--Aqui é o MODAL que vai abrir o formulário para Edição-->

<div class="modal fade" id="modalEdicao" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Deseja Editar Visitante?</h1>
            <div class="modal-body" id="conteudoModalEdicao">

            </div>
        </div>
    </div>
</div> 
<!-- Aqui é onde abre o modal para confirmação de Deletar-->

<div class="modal fade" id="modalDelete" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Deseja Deletar Visitante?</h1>
            <div class="modal-body" id="conteudoModalDelete">

            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>

    $(document).ready(function () {
        $('.btn-editar').click(function () {
            const id = $(this).data('id');

            $.ajax({
                type: "GET",
                url: "/Visitantes/Editar/" + id,
                success: function (html) {
                    $('#conteudoModalEdicao').html(html);
                    $('#modalEdicao').modal('show');
                },
                error: function () {
                    alert("Erro ao carregar formulário.");
                }
            });
        });

        $(document).on('submit', '#formEditarVisitante', function (e) {
            e.preventDefault();
            $.ajax({
                type: "POST",
                url: "/Visitantes/Editar/",
                data: $("#formEditarVisitante").serialize(),
                success: function (response) {
                    $('#modalEdicao').modal('hide');
                    location.reload();
                },
                error: function (xhr) {
                    alert("Erro ao salvar dados:" + xhr.responseText);
                }
            });
        });

    // Aqui vai o outro script para abrir o formulário para confirmar o Delete //

    
        $('.btn-deletar').click(function () {
            const id = $(this).data('id');

            $.ajax({
                type:"GET",
                url:"/Visitantes/Deletar/"+id,
                success: function (html) {
                    $('#conteudoModalDelete').html(html);
                    $('#modalDelete').modal('show');
                },
                error: function() {
                    alert("Erro ao carregar Visitante");
                }
            });
        });

        $(document).on('submit', '#formDeletarVisitante', function (e) {
            e.preventDefault();
            $.ajax({
                type:"POST",
                url: "/Visitantes/DeletarVisitante/",
                data: $("#formDeletarVisitante").serialize(),
                success: function (response) {
                    $('#modalDelete').modal('hide');
                    location.reload();
                },
                error: function(xhr) {
                    alert("Erro ao deletar o Visitante :" + xhr.responseText);
                }
            });
        });
    });
</script>

 