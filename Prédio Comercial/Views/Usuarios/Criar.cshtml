@model Prédio_Comercial.Models.Usuarios;

<h2>Cadastrar Novo Usuário</h2>
@if (TempData["MenssageSucesso"] != null)
{
    <div id="message" class=" container row col-md-5">
        <div class="alert-success" role="alert">
            <button class="btn btn-close" id="button"></button>
            @TempData["MenssageSucesso"]
        </div>
    </div>
}
@if (TempData["MenssageError"] != null)
{
    <div id="message" class=" container row col-md-5">
        <div class="alert-danger" role="alert">
            <button class="btn btn-close" id="button"></button>
            @TempData["MenssageError"]
        </div>
    </div>
}
