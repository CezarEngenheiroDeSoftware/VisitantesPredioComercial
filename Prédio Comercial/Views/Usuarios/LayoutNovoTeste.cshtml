@model Prédio_Comercial.Models.Usuarios;
@{
    Layout = "_LayoutSistemaNovo";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Sistema Prédio Comercial</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Icons (Font Awesome) -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #121212;
            color: white;
        }

        .sidebar {
            background-color: #000;
            width: 0px;
            min-height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
        }

            .sidebar a {
                display: block;
                padding: 20px;
                color: white;   
                text-align: center;
                transition: background 0.3s;
            }

                .sidebar a:hover {
                    background-color: #333;
                }

        .content {
            margin-left: 0px;
            padding: 20px;
        }

        .box {
            background-color: #1e1e1e;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .small-box {
            background-color: #1e1e1e;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column">
        <a href="#"><i class="fas fa-home"></i></a>
        <a href="#"><i class="fas fa-user"></i></a>
        <a href="#"><i class="fas fa-door-open"></i></a>
        <a href="#"><i class="fas fa-users"></i></a>
        <a href="#"><i class="fas fa-cog"></i></a>
    </div>

    <!-- Content -->
    <div class="content container-fluid">
        <div class="row">
            <!-- Coluna do meio -->
            <div class="col-md-8">
                <div class="box">
                    <h4>Quadrado Superior</h4>
                    <p>Espaço para colocar conteúdo.</p>
                </div>
                <div class="box">
                    <h4>Quadrado Inferior</h4>
                    <p>Outro espaço para conteúdo.</p>
                </div>
            </div>

            <!-- Coluna da direita -->
            <div class="col-md-4">
                <div class="small-box">
                    <h6>Quadrado Menor 1</h6>
                </div>
                <div class="small-box">
                    <h6>Quadrado Menor 2</h6>
                </div>
                <div class="small-box">
                    <h6>Quadrado Menor 3</h6>
                </div>
                <div class="small-box">
                    <h6>Quadrado Menor 4</h6>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>