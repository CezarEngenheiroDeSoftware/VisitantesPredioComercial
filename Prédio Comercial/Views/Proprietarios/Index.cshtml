@model IEnumerable<Prédio_Comercial.Models.Proprietarios>;


<style>
    .content {
        margin-left: 0px;
        padding: 20px;
    }
</style>

<div class="content container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="table-responsive-sm">
                <h2 class="card-subtitle">Proprietarios</h2>
                <a asp-controller="Proprietarios" asp-action="AdicionarView" class="btn btn-info">Adicionar Novo Proprietário</a>
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model=>model.Name)</th>
                            <th>@Html.DisplayNameFor(model=>model.Documento)</th>
                            <th>@Html.DisplayNameFor(model=>model.Sala)</th>
                            <th>@Html.DisplayNameFor(model=>model.Visitantes)</th>
                            <th>@Html.DisplayNameFor(model=>model.VisitantesId)</th>
                            <th></th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td id="Nome">@Html.DisplayFor(modelitem=> x.Name)</td>


                                <td>@Html.DisplayFor(modelitem=> x.Documento)</td>

                                <td>@Html.DisplayFor(modelitem=>x.Sala)</td>
                                <td>@if (x.Visitantes != null && x.Visitantes.Any())
                                    {
                                        @foreach (var visitantes in x.Visitantes)
                                        {
                                            @visitantes.Name<br />
                                            @visitantes.Dataentrada<br />
                                        }
                                    }

                                    else
                                    {
                                        Console.WriteLine("Nâo há visitantes");
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelitem=>x.VisitantesId)
                                </td>
                                <td>
                                    <a asp-controller="Proprietarios" asp-action="Alterar" asp-route-id="@x.Id" class="btn btn-primary btn-editar">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-building" viewBox="0 0 16 16">
                                            <path d="M4 2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm3.5-.5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5zM4 5.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zM7.5 5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5zm2.5.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zM4.5 8a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5zm2.5.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm3.5-.5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5z" />
                                            <path d="M2 1a1 1 0 0 1 1-1h10a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1zm11 0H3v14h3v-2.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 .5.5V15h3z" />
                                        </svg>
                                    </a>
                                    </td>
                                    <td>
                                    <a asp-controller="Proprietarios" asp-action="Deletar" asp-route-id="@x.Id" class="btn btn-danger btn-deletar">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293z" />
                                        </svg>
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-controller="Proprietarios" asp-action="Index" class="btn btn-light">Voltar</a>

            </div>
        </div>

    </div>

</div>


